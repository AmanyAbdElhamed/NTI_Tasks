{{>header}}
{{>navbar}}
<section class="container my-3">
    <div class="d-flex justify-content-end mb-3">
       
        <a href="/addPost" class="btn btn-primary mx-3">Add New Customer</a>
    </div>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>AccNum</th>
                    <th>name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#if isEmpty}}
                <tr>
                    <td colspan="3" class="bg-danger text-white ">No Customers Yet</td>
                </tr>
                {{else}}
                {{#each data}}
                <tr>
                    <td>{{this.accNum}}</td>
                    <td>{{this.name}}</td>
                    <td>
                        <a class="btn btn-primary" href="/single/{{this.accNum}}">Show</a>
                        <a class="btn btn-warning" href="/edit/{{this.accNum}}">Edit</a>
                        <a class="btn btn-danger " href="/delete/{{this.accNum}}">Delete</a>
                        <a class="btn btn-primary" href="/transactions/{{this.accNum}}">ADD Transactions</a>
                        <a class="btn btn-primary" href="/showTransation/{{this.accNum}}">Show Transactions </a>
                    </td>
                </tr>
                {{/each}}

                {{/if}}
            </tbody>
        </table>
    </div>
</section>
{{>footer}}